<div class="post-container">
  <div class="post-container">
    <h2>
        <div>
            <a href="/post/{{id}}">{{title}}</a>
        </div>
        <div class="post-meta">
            Posted By {{User.username}} on {{format_date createdAt}}
        </div>
    </h2>
    <p>{{content}}</p>
  </div>
  <h3>Comments:</h3>
  {{#each Comments as |comment|}}
    <div class="comment">
      <p>{{comment.content}}</p>
      <p>-{{comment.User.username}}, {{format_date comment.createdAt}}</p>
    </div>
  {{/each}}
  <form class="form addcomment-form">
    <div class="form-group">
       <input class="form-input" type="hidden" id="postid" value="{{id}}" disabled/>
       <label for="new-comment">Add new comment</label><br>
       <input class="form-input" type="text" id="new-comment" />
     </div>
     <div class="form-group">
       <button class="btn btn-primary" type="submit">Submit</button>
     </div>
  </form>
</div>

<script src="/js/comment.js"></script>