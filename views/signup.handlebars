<div class="login-container">
   <h2>Sign Up</h2>

   <form class="form login-form">
     <div class="form-group">
       <label for="username-login">Username:</label><br>
       <input class="form-input" type="text" id="username-login" />
     </div>
     <div class="form-group">
       <label for="password-login">Password:</label><br>
       <input class="form-input" type="password" id="password-login" />
     </div>
     <div class="form-group">
       <button class="btn btn-primary" type="submit">Sign Up!</button>
     </div>
     <div><a href="/login">Please login instead</a></div>
   </form>
</div>

<script src="./js/signup.js"></script>