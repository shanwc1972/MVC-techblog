<div class="post-container">
   <h2>Edit Post</h2>

    <form class="form postedit-form">
        <div class="form-group">
            <input type="text" id="postedit-id" value="{{id}}" disabled>
        </div>
        <div class="form-group">
            <label for="postedit-title">Title:</label><br>
            <input type="text" id="postedit-title" value="{{title}}" required>
        </div>
        <div class="form-group">
            <label for="postedit-content">Content:</label><br>
            <input type="text" id="postedit-content" value="{{content}}" required>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Update Post</button>
        </div>
    </form>
</div>

<script src="/js/postedit.js"></script>